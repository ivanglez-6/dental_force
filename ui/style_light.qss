
QMainWindow { background-color: #f7f9fc; color: #1f51b4ff; font-family: "Segoe UI", Roboto, sans-serif; }
#topHeader { background: qlineargradient(x1:0,y1:0,x2:1,y2:0, stop:0 #ffffff, stop:1 #f0f4f8); border-bottom:1px solid #e6eef8; }
#windowTitle { font-size:16px; color:#0b1220; padding-left:6px; }
#sidebar { background: #ffffff; border-right:1px solid #eef2f7; }
QPushButton, SidebarButton { color:#0b1220; }
QPushButton:checked, SidebarButton:checked { background-color:#2563eb; color:white; }
QFrame#card { background: white; border:1px solid #e6eef8; border-radius:8px; padding:10px; }
